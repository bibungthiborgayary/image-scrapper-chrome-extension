{
    "manifest_version": 3,
    "name": "Image Downloader",
    "version": "1.0",
    "description": "Scrap all images from the current page.",
    "permissions": ["downloads", "activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Download Images"
    },
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  